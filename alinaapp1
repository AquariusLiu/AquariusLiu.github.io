apiVersion: v1
kind: RegionPreference 
metadata:
  name: alinaapp1
  namespace: robot
spec:
  regions: 
  - name: NA
    replicas: 2 
  - name: EU
    replicas: 2
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: alinaapp1
  namespace: robot
spec:
  selector:
    matchLabels:
      app: alinaapp1
  template:
    metadata:
      labels:
        app: alinaapp1
      annotations:
        quantil.com/enableExternalIP: "true" 
    spec:
      imagePullSecrets:
      - name: myregistrykey
      containers:
      - name: alinaapp1
        image: gcr.io/google_containers/echoserver:1.4
        ports:
        - containerPort: 8080
          protocol: TCP
        imagePullPolicy: Always
        resources:
          limits:
            cpu: "100m"
            memory: 64Mi
          requests:
            cpu: "100m"
            memory: 32Mi
